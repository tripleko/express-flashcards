<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main-style.css">
    <link rel="stylesheet" href="/css/vendor/font-awesome/css/font-awesome.min.css">
    <script src="/js/vendor/jquery-3.2.1.min.js"></script>
    <link rel="stylesheet" href="/highlight/styles/default.css">
    <script src="/highlight/highlight.pack.js"></script>
    <script src='/mathjax/MathJax.js?config=TeX-MML-AM_CHTML'></script>
    <title>Code Cards</title>
</head>

<body>
    <div class="container">
        <main class="main">
            <div class="row">
                <p>
                    <a href="/">(Back to deck list?)</a>
                </p>
            </div>

            <div class="row justify-content-center">
                Front
            </div>
            <hr>

            <div class="row">
                <form>
                    <div id="frontCode">
                        <%- convFront %>
                    </div>
                </form>
            </div>
            <hr>
            <div style="display:none;" id="ansDiv">
                <div class="row justify-content-center">
                    Back
                </div>
                <div class="row">
                    <form>
                        <div id="backCode">
                            <%- convBack %>
                        </div>
                    </form>
                </div>
                <hr>
                <div class="row justify-content-center">
                    <div class="col-3">
                        <button id="correctBtn" class="btn btn-success" type="button">Correct</button>
                    </div>
                    <div class="col-3">
                        <button id="incorrectBtn" class="btn btn-danger" type="button">Incorrect</button>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <button id="showAnsBtn" class="btn btn-primary" type="button">Show Answer</button>
            </div>

            <div class="row justify-content-center">Time remaining:&nbsp;<span id="timeDisplay"></span></div>
        </main>
    </div>

    <script src="/js/vendor/bootstrap.bundle.min.js"></script>
    <script>
        let deckID = "<%= deckID %>";
        let cardID = "<%= card._id %>";
        let currentInterval = <%= card.currentInterval %>;
        let bestInterval = <%= card.bestInterval %>;
        let numPracticed = <%= card.numPracticed %>;
        let numCorrect = <%= card.numCorrect %>;
        let timeLimit = <%= card.timeLimit %> * 1000;
    </script>
    <script src="/js/study.js"></script>
</body>

</html>