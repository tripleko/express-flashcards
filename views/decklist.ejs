<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="css/main-style.css">
    <link rel="stylesheet" href="codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="css/vendor/font-awesome/css/font-awesome.min.css">
    <script src="js/vendor/jquery-3.2.1.min.js"></script>
    <script src="js/decklist.js"></script>
    <title>Code Cards</title>
</head>

<body>
    <div class="container">
        <main class="main">
            <div class="row">
                <div class="col">
                    <h4>Deck List</h4>

                </div>
                <div class="col input-group">
                    <input class="form-control" id="addNewTxt" type="text" placeholder="Deck to add">
                    <button type="button" id="addNewBtn" class="btn btn-success">Add New</button>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Edit Deck</th>
                                <th scope="col">Name</th>
                                <!-- <th scope="col">Last Studied</th> -->
                                <th scope="col">Total Cards</th>
                                <th scope="col">Delete?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < data.length; i++) { %>
                                <tr>
                                    <td>
                                        <a href="cardlist/<%= data[i]._id %>"><i class="fa fa-wrench" aria-hidden="true"></i></a>
                                    </td>
                                    <td>
                                        <% if(data[i].cards.length > 0) { %>
                                            <a href="study/<%= data[i]._id %>"><%= data[i].deckName %></a>
                                        <% } else { %>
                                            <%= data[i].deckName %>
                                        <% } %>
                                    </td>
                                    <!-- <td>
                                        <% if(data[i].lastStudied === 0) { %>
                                            Never
                                        <% } else { %>
                                            <%= data[i].lastStudied %>
                                        <% } %>
                                    </td> -->
                                    <td>
                                        <%= data[i].cards.length %>
                                    </td>
                                    <td>
                                        <i class="fa fa-trash-o" id="trash<%= i %>" aria-hidden="true"></i>
                                        <script>
                                        $(document).ready(function () {
                                            $("#trash<%= i %>").click(function () {
                                                deleteDeck('<%= data[i]._id %>', '<%= data[i].deckName %>');
                                            });
                                        });
                                        </script>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>

    <script src="js/vendor/bootstrap.bundle.min.js"></script>
    <script src="codemirror/lib/codemirror.js"></script>
    <script src="codemirror/mode/gfm/gfm.js"></script>
    <script src="codemirror/mode/javascript/javascript.js"></script>
</body>

</html>